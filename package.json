{
  "name": "ative-run-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Ative Run - IA Coach para Strava - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm --filter=portal-web build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "start": "pnpm --filter=portal-web start",
    "dev:portal": "turbo dev --filter=portal-web",
    "dev:ia": "turbo dev --filter=servico-ia",
    "build:portal": "turbo build --filter=portal-web",
    "build:ia": "turbo build --filter=servico-ia"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
